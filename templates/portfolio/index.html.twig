{% extends 'base.html.twig' %}


{% block body %}
    <section class="sticky-top">
        <div class="container">
            <div class="row text-center">
                <div class="col">
                    <div class="card border-top-0 rounded-0 rounded-bottom mb-3">
                        <div class="card-body d-flex justify-content-md-between justify-content-center align-items-center p-2">
                            <h1 class="lead mb-0 text-truncate px-3 d-none d-md-inline">Ausgew√§hlte Arbeiten</h1>
                            <div>
                                <form method="post">
                                    <label for="tag_filter" class="d-none">Tag Filter</label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text" id="basic-addon1">
                                            <i class="bi bi-tags"></i>
                                        </span>
                                        <select class="form-select form-select-sm filter_form" id="tag_filter" name="tag_filter">

                                            <option value="0" {% if not tag_filter %}selected{% endif %}>Alle Tags</option>
                                            {% for tag in tags %}
                                                <option value="{{ tag.id }}" {% if tag.id == tag_filter %}selected{% endif %}>{{ tag.name }}</option>
                                            {% else %}
                                                <option>Keine Tags vorhanden</option>
                                            {% endfor %}
                                        </select>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="bg-lighter py-5 shadow-hover-section">
        <div class="container" id="sample_items">
            {{ include('portfolio/_portfolio_items.html.twig') }}
        </div>
    </section>
    <section class="py-5">
        <div class="container">

        </div>
    </section>
{% endblock %}
