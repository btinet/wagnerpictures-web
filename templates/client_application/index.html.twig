{% extends 'base.html.twig' %}


{% block body %}
    <section>
        <div class="container">
            <div class="row text-center">
                <div class="col">
                    <h1 class="display-4 mt-2">{{ 'application'|trans }}</h1>
                    <p class="lead">{{ 'application_sub'|trans }}</p>
                </div>
            </div>
        </div>
    </section>
    <section class="bg-lighter py-5 shadow-hover-section">
        <div class="container" id="sample_items">
            <div class="card shadow">
                {% if app.user %}
                    <div class="card-body">
                        <h2 class="h4 fw-normal pb-2">Bewerbung</h2>
                    </div>
                        {% if app.user.applications|length > 0 %}
                            <div class="list-group list-group-flush">
                                {% for application in app.user.applications %}
                                    <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                        <div>
                                            <span class="me-2">Bewerbung {{ application.id }}</span>
                                            <span class="small">{{ application.updated|ago }}</span>
                                        </div>
                                        <div>
                                            {% if application.isComplete %}
                                                <div class="badge bg-success text-light">abgesendet</div>
                                                {% else %}
                                                    <div class="badge bg-primary text-light">noch nicht vollst√§ndig</div>
                                            {% endif %}

                                        </div>
                                    </a>
                                {% endfor %}
                            </div>
                            {% else %}
                                <div class="card-body">
                                    <div class="alert alert-light border d-flex flex-column justify-content-center align-items-center" style="height: 200px">
                                        <span>noch keine Bewerbung vorhanden.</span>
                                        <a href="{{ path('application_new') }}" class="link-primary">neue Bewerbung anlegen</a>
                                    </div>
                                </div>
                        {% endif %}
                    <div class="card-footer bg-white p-2">
                        <div class="d-flex justify-content-end align-items-center">
                            <a href="{{ path('application_new') }}" class="btn btn-lg w-100 btn-primary">neue Bewerbung anlegen</a>
                        </div>
                    </div>
                {% else %}
                    <div class="card-body">
                        Nix
                    </div>
                {% endif %}
            </div>

        </div>
    </section>
    <section class="py-5">
        <div class="container">

        </div>
    </section>
{% endblock %}
