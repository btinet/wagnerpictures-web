{% extends 'base.html.twig' %}


{% block body %}
    <section>
        <div class="container">
            <div class="row text-center">
                <div class="col">
                    <h1 class="display-4 mt-2">{{ 'application'|trans }}</h1>
                    <p class="lead">{{ 'application_sub'|trans }}</p>
                </div>
            </div>
        </div>
    </section>
    <section class="bg-lighter py-5 shadow-hover-section">
        <div class="container" id="sample_items">
            <div class="card shadow">
                {% if app.user %}
                    <div class="card-body">
                        <h2 class="h4 fw-normal pb-2">Bewerbung</h2>
                        <div class="alert alert-light border d-flex flex-column justify-content-center align-items-center" style="height: 200px">
                            <span>noch keine Bewerbung vorhanden.</span>
                            <a href="#" class="link-primary">neue Bewerbung anlegen</a>
                        </div>
                    </div>
                    <div class="list-group list-group-flush">
                        {% for i in 1..3 %}
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <span class="me-2">Bewerbung {{ i }}</span>
                                <span class="small">13.10.2021</span>
                            </div>
                            <div>
                                <div class="badge bg-primary text-light">noch nicht versendet</div>
                            </div>
                        </a>
                        {% endfor %}
                    </div>
                    <div class="card-footer bg-white p-2">
                        <div class="d-flex justify-content-end align-items-center">
                            <button type="submit" form="client_image_upload" class="btn btn-lg w-100 btn-primary">neue Bewerbung anlegen</button>
                        </div>
                    </div>
                {% else %}
                    <div class="card-body">
                        Nix
                    </div>
                {% endif %}
            </div>

        </div>
    </section>
    <section class="py-5">
        <div class="container">

        </div>
    </section>
{% endblock %}
