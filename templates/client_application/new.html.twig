{% extends 'base.html.twig' %}


{% block body %}
    <section class="sticky-top">
        <div class="container">
            <div class="row text-center">
                <div class="col">
                    <div class="card border-top-0 rounded-0 rounded-bottom mb-3">
                        <div class="card-body d-flex justify-content-between align-items-center py-2 px-3">
                            <div class="d-flex justify-content-start align-items-center">
                                <div class="btn-group btn-group-sm">
                                    <a href="{{ path('application_index') }}" class="btn btn-sm btn-light me-2">{{ 'cancel'|trans }}</a>
                                </div>
                                <h1 class="lead mb-0 text-truncate d-none d-sm-inline">{{ 'application_new'|trans }}</h1>
                            </div>
                            <div class="btn-group btn-group-sm">
                                <button type="submit" form="application_image_only" class="btn btn-sm btn-primary">{{ button_label|default('next')|trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="bg-lighter py-5 shadow-hover-section">
        <div class="container" id="sample_items">
            <div class="card shadow">
                {% if app.user %}
                    {{ include('client_application/_image_form.html.twig') }}
                {% else %}
                    <div class="card-body">
                        Nix
                    </div>
                {% endif %}
            </div>

        </div>
    </section>
    <section class="py-5">
        <div class="container">

        </div>
    </section>
{% endblock %}
