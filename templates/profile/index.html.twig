{% extends 'base.html.twig' %}


{% block body %}
    <section class="sticky-top">
        <div class="container">
            <div class="row text-center">
                <div class="col">
                    <div class="card border-top-0 rounded-0 rounded-bottom mb-3">
                        <div class="card-body d-flex justify-content-md-between justify-content-center align-items-center p-2">
                            <h1 class="lead mb-0 text-truncate px-3 d-none d-md-inline">
                                <i class="bi bi-person me-1"></i>
                                {{ app.user.companyName|default(app.user.privatName) }}
                            </h1>
                            <div>
                                <form method="post">
                                    <label for="tag_filter" class="d-none">Tag Filter</label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text" id="basic-addon1">
                                            <i class="bi bi-tags"></i>
                                        </span>
                                        <select class="slim-select form-control p-0 border-0 settings_form" aria-label="Default select example" style="min-width: 160px">
                                            <option data-placeholder="true"></option>
                                            <option value="1">One</option>
                                            <option value="2">Two</option>
                                            <option value="3">Three</option>
                                        </select>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-lighter py-5">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="card bg-white shadow">
                        <div class="row g-0">
                            <div class="col-md-4 bg-lighter">
                                <h1 class="h5 fw-normal p-3">{% trans %}settings{% endtrans %}</h1>
                                <div class="list-group list-group-flush">

                                        {% for setting in settings %}
                                            {% if current_setting  %}
                                                {% if setting.slug == current_setting.slug %}
                                                    {% set current = 'active' %}
                                                {% else %}
                                                    {% set current = 'bg-transparent' %}
                                                {% endif %}
                                            {% endif %}
                                            <a href="{{ path('profile_edit',{'action':setting.slug}) }}" class="list-group-item list-group-item-action {{ current|default('bg-transparent') }}">{{ setting.title }}</a>
                                        {% endfor %}

                                </div>
                            </div>
                            <div class="col-md-8 d-flex justify-content-between flex-column">
                                <div class="card-body flex-grow-0">
                                    <div class="d-flex justify-content-between align-items-center">
                                        {{ current_setting.title|default('Menüpunkt wählen') }}
                                    </div>

                                    <p class="card-text small badge bg-dark">
                                        Titel
                                    </p>
                                    <p class="card-text small">{{ current_setting.description|default('') }}</p>
                                    {% if form is defined %}
                                    {{ form(form) }}
                                    {% endif %}
                                </div>
                                <div class="card-footer bg-white">
                                    Footer
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="py-5">
        <div class="container">
            <h2 class="display-6 text-center mb-4">Compare plans</h2>

            <div class="table-responsive">
                <table class="table text-center">
                    <thead>
                    <tr>
                        <th style="width: 34%;"></th>
                        <th style="width: 22%;">Free</th>
                        <th style="width: 22%;">Pro</th>
                        <th style="width: 22%;">Enterprise</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <th scope="row" class="text-start">Public</th>
                        <td><svg class="bi" width="24" height="24"><use xlink:href="#check"></use></svg></td>
                        <td><svg class="bi" width="24" height="24"><use xlink:href="#check"></use></svg></td>
                        <td><svg class="bi" width="24" height="24"><use xlink:href="#check"></use></svg></td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-start">Private</th>
                        <td></td>
                        <td><svg class="bi" width="24" height="24"><use xlink:href="#check"></use></svg></td>
                        <td><svg class="bi" width="24" height="24"><use xlink:href="#check"></use></svg></td>
                    </tr>
                    </tbody>

                    <tbody>
                    <tr>
                        <th scope="row" class="text-start">Permissions</th>
                        <td><svg class="bi" width="24" height="24"><use xlink:href="#check"></use></svg></td>
                        <td><svg class="bi" width="24" height="24"><use xlink:href="#check"></use></svg></td>
                        <td><svg class="bi" width="24" height="24"><use xlink:href="#check"></use></svg></td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-start">Sharing</th>
                        <td></td>
                        <td><svg class="bi" width="24" height="24"><use xlink:href="#check"></use></svg></td>
                        <td><svg class="bi" width="24" height="24"><use xlink:href="#check"></use></svg></td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-start">Unlimited members</th>
                        <td></td>
                        <td><svg class="bi" width="24" height="24"><use xlink:href="#check"></use></svg></td>
                        <td><svg class="bi" width="24" height="24"><use xlink:href="#check"></use></svg></td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-start">Extra security</th>
                        <td></td>
                        <td></td>
                        <td><svg class="bi" width="24" height="24"><use xlink:href="#check"></use></svg></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}
